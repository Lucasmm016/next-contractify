{
  "name": "@lucasmm016/next-contractify",
  "version": "1.0.0",
  "description": "Type-safe contract-based API client with Zod and code generation",
  "license": "MIT",
  "author": "Lucas Moreira de Matos",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lucasmm016/next-contractify.git"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint",
    "format": "eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "axios": "^1.13.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "next": "^16.1.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16",
    "zod": "^4.3.4"
  },
  "peerDependencies": {
    "axios": ">=1",
    "next": ">=15",
    "zod": ">=4"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "api",
    "zod",
    "type-safe",
    "contracts",
    "validation"
  ]
}